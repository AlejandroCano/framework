{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "incremental": true,
    "composite": true,
    //"noEmit": true,
    "strict": true,
    "declarationMap": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "outDir": "./ts_out",
    "paths": {
      "@framework/*": [ "../../Signum.React/*" ]
    }
  },
  "references": [
    { "path": "../../Signum.React" }
  ],
  "exclude": [
    "../../Signum.React/ts_out",
    "./ts_out"
  ]
}
